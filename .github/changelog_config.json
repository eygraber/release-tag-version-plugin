{
  "categories": [
    {
      "title": "## ‚ú® Enhancements",
      "labels": ["enhancement"]
    },
    {
      "title": "## ‚öôÔ∏è Chores",
      "labels": ["chore"]
    },
    {
      "title": "## üêõ Bugs",
      "labels": ["bug"]
    },
    {
      "title": "## üß™ Tests",
      "labels": ["test"]
    },
    {
      "title": "## \uD83D\uDCD6 Documentation",
      "labels": ["documentation"]
    }
  ],
  "ignore_labels": [
    "duplicate", "good first issue", "help wanted", "invalid", "question", "wontfix", "skip release notes", "WIP", "hold", "gh-actions", "dependencies", "gradle"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1"
    },
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "tag_resolver": {
    "method": "semver",
    "transformer": {
      "pattern": "^v([0-9]+\\.[0-9]+\\.[0-9]+)-([0-9]+)$",
      "target": "$1.$2"
    }
  },
  "base_branches": [
    "master"
  ]
}
